{
  "name": "Formatter",
  "version": "1.0",
  "description": "A formatter for dev",
  "manifest_version": 2,
  "permissions": [
    "contextMenus",
    "tabs",
    "activeTab",
    "<all_urls>",
    "clipboardRead",
    "clipboardWrite"
  ],
  "background": {
    "scripts": [
      "jquery/jquery.min.js",
      "background.js"
    ],
    "persistent": false
  },
  "web_accessible_resources": [
    "jquery/images/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "jquery/jquery-ui.css",
        "jquery/jquery-ui.theme.css",
        "jquery/jquery-ui.structure.css",
        "diff/diffview.css",
        "css/mydialog.css"
      ],
      "js": [
        "jquery/jquery.min.js",
        "jquery/jquery-ui.min.js",
        "diff/difflib.js",
        "diff/diffview.js",
        "foreground.js"
      ]
    }
  ]
}